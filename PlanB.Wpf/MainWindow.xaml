<Window x:Class="PlanB.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanB.Wpf"
        mc:Ignorable="d"
        Title="Moto Gymkhana Samara" Height="600" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top" Background="LightBlue">
            <MenuItem x:Name="Start" Click="MenuItemStart_Click"> 
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Старт</TextBlock>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem x:Name="Registration" Header="Регистрация" Click="MenuItemReg_Click"> </MenuItem>
            <!--<MenuItem x:Name="Settings" Header="Настройки" Click="MenuItemSettings_Click"> </MenuItem>-->
            <MenuItem x:Name="Result" Header="Результаты" Click="MenuItemResult_Click"> </MenuItem>
        </Menu>

        <Frame x:Name="Main" Margin="0, 2, 0, 0" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Window>
